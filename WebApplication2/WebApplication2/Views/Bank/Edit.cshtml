@{
}
@model NewBranchForm
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Bank Branch</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Arial', sans-serif;
        }

        .container {
            max-width: 500px;
            margin: 0 auto;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            background-color: #ffffff;
        }

        h2 {
            text-align: center;
            color: #007bff;
        }

        label {
            font-weight: bold;
        }

        .form-control {
            border-radius: 5px;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }

            .btn-primary:focus {
                box-shadow: none;
            }
    </style>
</head>
<body>
    <div class="container">
        <h2>Edit Bank Branch</h2>
        <form asp-action="Edit" method="post">
            <div class="form-group">
                <label for="LocationName">Location Name:</label>
                <input type="text" class="form-control" id="LocationName" name="LocationName" value="@Model.LocationName">
            </div>
            <div class="form-group">
                <label for="LocationURL">Location URL:</label>
                <input type="text" class="form-control" id="LocationURL" name="LocationURL" value="@Model.LocationURL">
            </div>
            <div class="form-group">
                <label for="BranchManager">Branch Manager:</label>
                <input type="text" class="form-control" id="BranchManager" name="BranchManager" value="@Model.BranchManager">
            </div>
            <div class="form-group">
                <label for="EmployeeCount">Employee Count:</label>
                <input type="number" class="form-control" id="EmployeeCount" name="EmployeeCount" value="@Model.EmployeeCount">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>
