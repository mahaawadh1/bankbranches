@model BankBranch
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Branch Details</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Arial', sans-serif;
        }

        .container {
            max-width: 600px;
            margin: 0 auto;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            background-color: #ffffff;
        }

        h2 {
            text-align: center;
            color: #007bff;
            margin-bottom: 30px;
        }

        dt {
            font-weight: bold;
            margin-top: 15px;
        }

        dd {
            margin-left: 0;
            margin-bottom: 15px;
        }

        .btn {
            background-color: #007b;
            border: none;
            color: white;
            padding: 8px 16px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 14px;
            margin-top: 10px;
            cursor: pointer;
            border-radius: 5px;
        }

            .btn:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="container">
        <h2>Branch Details</h2>
        <dl class="row">
            <dt class="col-sm-3">ID:</dt>
            <dd class="col-sm-9">@Model.Id</dd>

            <dt class="col-sm-3">Location Name:</dt>
            <dd class="col-sm-9">@Model.LocationName</dd>

            <dt class="col-sm-3">Location URL:</dt>
            <dd class="col-sm-9"><a href="@Model.LocationURL" class="btn">Click here!</a></dd>

            <dt class="col-sm-3">Branch Manager:</dt>
            <dd class="col-sm-9">@Model.BranchManager</dd>

            <dt class="col-sm-3">Employee Count:</dt>
            <dd class="col-sm-9">@Model.EmployeeCount</dd>

            <dt class="col-sm-3">Employees:</dt>
            <dd class="col-sm-9">
                @if (Model.Employees != null && Model.Employees.Any())
                {
                    <ul>
                        @foreach (var employee in Model.Employees)
                        {
                            <li>@employee.Name - @employee.Position - @employee.CivilId</li>
                        }
                    </ul>
                }
                else
                {
                    <p>No employees found.</p>
                }
            </dd>
        </dl>
        <a asp-controller="Bank" asp-action="AddEmployee" asp-route-Id="@Model.Id" class="btn btn-primary">Add Employee</a>
    </div>

        </dl>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>